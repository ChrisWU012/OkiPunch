<div class="container container-fluid col">
    <form>
        <br>
        <h1 class="text-center">Type in 4-digit password</h1>
        <br>
        <!-- Enter OTP -->
        <div class="row">
            <div class="col">
                <p class="wrapper">
                    {{!-- employee_id --}}
                    <input type="text" class="form-control" name="employee-id" placeholder="&#xf127   Employee ID" aria-label="id">
                    <br>
                    {{!-- OTP  --}}
                    <input type="text" id="otp" class="form-control" name="otp" placeholder="&#xf127   4-digit password" aria-label="OTP">
                    <br>
                    <!--Submit Btn-->
                    <button type="submit" id="submit-otp" class="btn btn-primary btn-sm"><i class="fa-solid fa-circle-right fa-2xl"></i></button>
                    <br>
                </p>
            </div>
        </div>
    </form>
</div>

<script>
    $(document).ready(function(){
        $("form").submit(function(e){
            e.preventDefault();
            axios.post("/biz/worker/otp",{
                id:$('input[name=employee-id]').val(),
                otp:$('input[name=otp]').val(),
            });
        })
    })
</script>